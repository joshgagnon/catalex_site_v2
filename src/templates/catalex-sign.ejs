<!DOCTYPE html>
<html lang="en">

 <%= require('ejs!./head.ejs')({htmlWebpackPlugin: htmlWebpackPlugin}) %>
  <body>
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5NXTBW3"
height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>

    <%= require('ejs!./header.ejs')({active: 'catalex-sign'}) %>
    
    <div class="top sign-hero">
        <div class="layer"></div>
        <div class="hero-content">
            <img class="hero-logo" src="/images/sign-logo.png" alt="CataLex Sign Logo"/>

            <p class="hero-description first-hero-description">Sign documents <strong>easily</strong>, <strong>quickly</strong>, and <strong>securely</strong> online. Sign your own documents, or invite others to sign.</p>
            <p class="hero-description">Unlimited signing and invites for $60 a year or $6 a month.</p>

            <a class="hero-button-primary" href="https://users.catalex.nz/auth/register?sign=true">Sign Up</a>
            <a class="hero-button-secondary" href="https://users.catalex.nz/auth/login">Login</a>
        </div>
    </div>

    <div class="container text-center sub-hero-heading">
        <h2>Why use CataLex Sign?</h2>
    </div>

    <div class="scroll-row odd">
        <section class="container">
            <div class="fade-container">
                <div class="row">
                    <div class="col-xs-12 col-md-9">
                        <div class="icon-outer">
                            <div class="icon-inner">
                                <i class="fa fa-thumbs-up"></i>
                            </div>
                        </div>
                        <div class="icon-pad">
                            <h3>Easy to Use</h3>
                        </div>
                    </div>
                    <div class="hidden-xs col-md-3">
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="scroll-row even">
        <section class="container">
            <div class="fade-container">
                <div class="row">
                    <div class="hidden-xs col-md-3">
                    </div>
                    <div class="col-xs-12 col-md-9">
                        <div class="icon-outer">
                            <div class="icon-inner">
                                <i class="fa fa-users"></i>
                            </div>
                        </div>
                        <div class="icon-pad">
                            <h3>Invite Others to Sign</h3>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="scroll-row odd">
        <section class="container">
            <div class="fade-container">
                <div class="row">
                    <div class="col-xs-12 col-md-9">
                        <div class="icon-outer">
                            <div class="icon-inner">
                                <i class="fa fa-paste"></i>
                            </div>
                        </div>
                        <div class="icon-pad">
                            <h3>Mark Where Recipients Should Sign</h3>
                        </div>
                    </div>
                    <div class="hidden-xs col-md-3"></div>
                </div>
            </div>
        </section>
    </div>


    <div class="scroll-row even">
        <section class="container">
            <div class="fade-container">
                <div class="row">
                    <div class="hidden-xs col-md-3"></div>
                    <div class="col-xs-12 col-md-9">
                        <div class="icon-outer">
                            <div class="icon-inner">
                                <i class="fa fa-envelope"></i>
                            </div>
                        </div>
                        <div class="icon-pad">
                            <h3>Get Notifications Along the Way</h3>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="scroll-row odd">
        <section class="container">
            <div class="fade-container">
                <div class="row">
                    <div class="col-xs-12 col-md-9">
                        <div class="icon-outer">
                            <div class="icon-inner">
                                <i class="fa fa-lock"></i>
                            </div>
                        </div>
                        <div class="icon-pad">
                            <h3>Securely Store PDFs</h3>
                        </div>
                    </div>
                    <div class="hidden-xs col-md-3">
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="scroll-row even">
        <section class="container">
            <div class="fade-container">
                <div class="row">
                    <div class="col-xs-12 col-md-9">
                        <div class="icon-outer">
                            <div class="icon-inner">
                                <i class="fa fa-certificate"></i>
                            </div>
                        </div>
                        <div class="icon-pad">
                            <h3>Verify Documents Haven't Been Changed</h3>
                        </div>
                    </div>
                    <div class="hidden-xs col-md-3">
                    </div>
                </div>
            </div>
        </section>
    </div>

    <%= require('ejs!./footer.ejs')() %>
