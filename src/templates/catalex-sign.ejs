<!DOCTYPE html>
<html lang="en">

 <%= require('ejs!./head.ejs')({htmlWebpackPlugin: htmlWebpackPlugin}) %>
  <body>
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5NXTBW3"
height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>

    <%= require('ejs!./header.ejs')({active: 'catalex-sign'}) %>
    
    <div class="top sign-hero">
        <div class="layer"></div>
        <div class="hero-content">
            <img class="hero-logo" src="/images/sign-logo.png" alt="CataLex Sign Logo"/>

            <p class="hero-description first-hero-description">Sign documents <strong>easily</strong>, <strong>quickly</strong>, and <strong>securely</strong> online. Sign your own documents or invite others to sign.</p>
            <p class="hero-description">Unlimited signing and invites for $60 a year or $6 a month.</p>

            <a class="hero-button-primary" href="https://users.catalex.nz/auth/register?sign=true">Sign Up</a>
            <a class="hero-button-secondary" href="https://users.catalex.nz/auth/login">Login</a>
        </div>
    </div>
    
    <%
        var features = [{
            iconName: 'thumbs-up',
            title: 'Easy to use',
            content: 'Upload your document, upload or draw your signature, and sign the document. Works on any device. No software download required.',
        },{
            iconName: 'users',
            title: 'Invite others to sign',
            content: 'Invite as many people as you like to sign a document. Add the names and email addresses of the signatories and CataLex Sign will send them a notification to sign the document. You can add a personalised message to that notification.',
        },{
            iconName: 'files-o',
            title: 'Three free documents per month',
            content: 'Sign or invite others to sign three documents per month free of charge.',
        },{
            iconName: 'paste',
            title: 'Mark where others should sign',
            content: 'Add text boxes to your document to clearly mark where recipients are to sign, initial, or date the document. You can also customise text boxes, for details like names and addresses.',
        },{
            iconName: 'envelope',
            title: 'Get notifications along the way',
            content: 'CataLex Sign will notify you when signatories sign or reject your document, and when your document has been fully signed.',
        },{
            iconName: 'upload',
            title: 'Upload multiple documents for signing',
            content: 'Create a document set with all the documents to be signed. Signatories can step through each document in a seamless execution process.',
        },{
            iconName: 'lock',
            title: 'Securely store PDFs',
            content: 'Documents you have signed, invited others to sign, or that have been fully signed, are securely stored and easily accessible.',
        },{
            iconName: 'download',
            title: 'Download and email signed documents',
            content: 'Easily download signed documents or email them directly from CataLex Sign to one or more recipients. A simple way to provide your signatories with a copy of the signed documents.',
        },{
            iconName: 'certificate',
            title: 'Verify documents havenâ€™t been altered',
            content: 'Any person can verify that a document has been signed by uploading it to CataLex Sign. If the document was not signed with CataLex or has been tampered with, the verification will fail.',
        }];
    %>

    

    <div class="container sign-content">
        <h2>Why use CataLex Sign?</h2>

        <div class="row">
            <% for(var i = 0; i < features.length; i++) {%>
                
                <div class="col-md-6">
                    <div class="feature">
                        <i class="fa fa-<%= features[i].iconName %>"></i>
                        <div class="content">
                            <h3><%= features[i].title %></h3>
                            <p><%= features[i].content %></p>
                        </div>
                    </div>
                </div>

            <% } %>
        </div>
    </div>

    <%= require('ejs!./footer.ejs')() %>
        <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

          ga('create', 'UA-59849645-1', 'auto');
          ga('send', 'pageview');

        </script>

  </body>
</html>
